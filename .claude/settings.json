{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "test -f scripts/pre-edit-check.sh && ./scripts/pre-edit-check.sh || true"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "test -f scripts/security-check.sh && ./scripts/security-check.sh || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "test -f scripts/lint-changed.sh && ./scripts/lint-changed.sh || true"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(uv run *)",
      "Bash(uv sync)",
      "Bash(uv add *)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(make *)",
      "Bash(pytest *)",
      "Read(**)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(git push --force *)",
      "Bash(pip install *)",
      "Bash(conda *)",
      "Read(.env*)",
      "Read(**/secrets*)"
    ]
  }
}
