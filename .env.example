# Music Attribution Scaffold â€” Environment Variables
# Copy this file to .env and customize for your environment.
# All values below are defaults (except DATABASE_URL which is required).

# =============================================================================
# Database (REQUIRED)
# =============================================================================
DATABASE_URL=postgresql+psycopg://musicattr:musicattr_dev@localhost:5432/music_attribution  # pragma: allowlist secret
VALKEY_URL=redis://localhost:6379

# =============================================================================
# API Server
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# External APIs (optional)
# =============================================================================
MUSICBRAINZ_USER_AGENT=MusicAttribution/0.1.0 (your-email@example.com)
DISCOGS_TOKEN=

# =============================================================================
# LLM / Agent
# =============================================================================
LLM_PROVIDER=anthropic
LLM_MODEL=claude-haiku-4-5
ATTRIBUTION_AGENT_MODEL=anthropic:claude-haiku-4-5

# =============================================================================
# Reproducibility
# =============================================================================
ATTRIBUTION_SEED=42

# =============================================================================
# Runtime
# =============================================================================
LOG_LEVEL=INFO
ENVIRONMENT=development
