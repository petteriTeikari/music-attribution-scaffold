# Music Attribution Scaffold — Environment Variables
# Copy this file to .env and fill in your values.

# Database (required)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/music_attribution

# Valkey/Redis (optional, defaults to localhost)
VALKEY_URL=redis://localhost:6379

# MusicBrainz API (required — must include app name and contact email)
MUSICBRAINZ_USER_AGENT=MusicAttribution/0.1.0 (your-email@example.com)

# Discogs API (optional)
DISCOGS_TOKEN=

# LLM provider settings (optional)
LLM_PROVIDER=anthropic
LLM_MODEL=claude-haiku-4-5

# Reproducibility
ATTRIBUTION_SEED=42

# Runtime
LOG_LEVEL=INFO
ENVIRONMENT=development
